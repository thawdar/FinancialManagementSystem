@page
@model FinancialManagementSystem.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}



<br />

<div class="col-md-5 mx-auto">

    <div class="col-md-12 text-center">
        <h1>Register</h1>
    </div>
    <hr />
    <form class="form" method="post" name="login">
        <div class="form-group">
            <label for="displayname">Display Name</label>
            <input type="text" asp-for="profile.DisplayName" class="form-control" id="displayname" aria-describedby="emailHelp" placeholder="Enter Display Name">
            <span asp-validation-for="profile.DisplayName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="loginid">Login ID</label>
            <input type="text" asp-for="profile.LoginId" class="form-control" id="loginid" aria-describedby="emailHelp" placeholder="Enter Login ID">
            <span asp-validation-for="profile.LoginId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" asp-for="profile.Pwd" id="password" class="form-control" aria-describedby="emailHelp" placeholder="Enter Password">
            <span asp-validation-for="profile.Pwd" class="text-danger"></span>
        </div>


        <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Register</button>
        <hr />
        <div class="form-group text-center">
            <a asp-page="/Index">Cancel</a>
        </div>

    </form>

</div>
