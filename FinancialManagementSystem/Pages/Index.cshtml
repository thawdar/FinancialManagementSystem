@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<br />

<div class="col-md-5 mx-auto">

    <div class="col-md-12 text-center">
        <h1>Login</h1>
    </div>
    <hr />
    <form class="form" method="post" name="login">
        <div class="form-group">
            <label for="loginid">Login ID</label>
            <input type="text" asp-for="user.LoginId" class="form-control" id="loginid" aria-describedby="emailHelp" placeholder="Enter Login ID">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" asp-for="user.Pwd" id="password" class="form-control" aria-describedby="emailHelp" placeholder="Enter Password">
        </div>


        <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Login</button>
        <hr />
        <div class="form-group text-center">
            <a asp-page="/Register">Register</a>
        </div>

    </form>

</div>
